@model CustomerErrorViewModel
@{
    ViewData["Title"] = "Error - Please Try Again";
}

<div class="container-fluid px-2">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="text-center">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <div class="error-icon mb-4">
                            <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                        </div>

                        <h1 class="display-6 fw-bold text-warning mb-3">Oops! Something went wrong</h1>

                        <div class="alert alert-warning" role="alert">
                            <h4 class="alert-heading">We encountered an issue</h4>
                            <p class="mb-0">@Model.ErrorMessage</p>
                        </div>

                        <div class="solutions mt-4">
                            <h5 class="mb-3">What you can do:</h5>
                            <div class="row text-start">
                                <div class="col-12 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-redo text-primary me-3" style="font-size: 1.5rem;"></i>
                                        <div>
                                            <strong>Try Again</strong><br>
                                            <small class="text-muted">Most issues are temporary - give it another shot</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-wifi text-primary me-3" style="font-size: 1.5rem;"></i>
                                        <div>
                                            <strong>Check Your Connection</strong><br>
                                            <small class="text-muted">Make sure you have a stable internet connection</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-friends text-primary me-3" style="font-size: 1.5rem;"></i>
                                        <div>
                                            <strong>Contact Sales Team</strong><br>
                                            <small class="text-muted">Our team can help you join the queue manually</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a href="@(Model.ReturnUrl ?? "/Customer")" class="btn btn-primary btn-lg">
                                <i class="fas fa-redo me-2"></i> Try Again
                            </a>
                        </div>

                        <div class="mt-3">
                            <p class="text-muted small">
                                Still having trouble? Find our sales team at the counter - they're here to help!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>