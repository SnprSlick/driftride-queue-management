@{
    ViewData["Title"] = "Success - Welcome to the Queue!";
}

<div class="container-fluid px-2">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="text-center">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <div class="success-icon mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>

                        <h1 class="display-5 fw-bold text-success mb-3">ðŸŽ‰ You're All Set!</h1>

                        <div class="alert alert-success" role="alert">
                            <h4 class="alert-heading">Welcome to the Drift Queue!</h4>
                            <p class="mb-2">Your payment has been confirmed and you've been added to the queue.</p>
                            <hr>
                            <p class="mb-0">We'll keep you updated on your position in real-time!</p>
                        </div>

                        <div class="queue-info mt-4">
                            <h5 class="mb-3">What happens next?</h5>
                            <div class="row text-start">
                                <div class="col-12 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-clock text-primary me-3" style="font-size: 1.5rem;"></i>
                                        <div>
                                            <strong>Real-time Updates</strong><br>
                                            <small class="text-muted">We'll notify you as the queue moves</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-car text-primary me-3" style="font-size: 1.5rem;"></i>
                                        <div>
                                            <strong>Get Ready</strong><br>
                                            <small class="text-muted">Stay nearby when it's almost your turn</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-trophy text-primary me-3" style="font-size: 1.5rem;"></i>
                                        <div>
                                            <strong>Enjoy Your Ride</strong><br>
                                            <small class="text-muted">Experience the thrill of drifting!</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a href="/Customer" class="btn btn-primary btn-lg">
                                <i class="fas fa-redo me-2"></i> Add Another Person
                            </a>
                        </div>

                        <div class="mt-3">
                            <p class="text-muted small">
                                Need help? Contact our sales team at the counter.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>