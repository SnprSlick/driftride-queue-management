{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=DriftRideDB;Integrated Security=True;Connect Timeout=30;Encrypt=False;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False"
  },
  "JwtSettings": {
    "SecretKey": "DriftRide_Super_Secret_Key_For_JWT_Authentication_2024_MinimumLength32Characters",
    "Issuer": "DriftRide.Api",
    "Audience": "DriftRide.Web",
    "ExpirationHours": 24,
    "RefreshTokenExpirationDays": 7
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://localhost:7001",
      "http://localhost:5001",
      "https://localhost:5000",
      "http://localhost:5000",
      "https://localhost:3000",
      "http://localhost:3000",
      "https://localhost:8080",
      "http://localhost:8080"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS",
      "PATCH"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-Requested-With",
      "Accept",
      "Origin",
      "User-Agent",
      "Cache-Control",
      "X-SignalR-User-Agent",
      "Connection",
      "Upgrade"
    ],
    "AllowCredentials": true
  },
  "SignalR": {
    "EnableDetailedErrors": false,
    "ClientTimeoutInterval": "00:01:00",
    "KeepAliveInterval": "00:00:15",
    "HandshakeTimeout": "00:00:15"
  },
  "SecuritySettings": {
    "EnableContentSecurityPolicy": true,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' ws: wss:; frame-ancestors 'none'; object-src 'none'; base-uri 'self'",
    "EnableHsts": true,
    "HstsMaxAge": 31536000,
    "EnableXFrameOptions": true,
    "XFrameOptions": "DENY",
    "EnableXContentTypeOptions": true,
    "EnableReferrerPolicy": true,
    "ReferrerPolicy": "strict-origin-when-cross-origin",
    "EnablePermissionsPolicy": true,
    "PermissionsPolicy": "camera=(), microphone=(), geolocation=(), payment=()"
  },
  "RateLimitSettings": {
    "EnableRateLimiting": true,
    "GeneralApiLimit": {
      "RequestsPerMinute": 60,
      "RequestsPerHour": 1000
    },
    "AuthenticationLimit": {
      "RequestsPerMinute": 5,
      "RequestsPerHour": 20
    },
    "PaymentLimit": {
      "RequestsPerMinute": 10,
      "RequestsPerHour": 50
    }
  },
  "InputValidationSettings": {
    "MaxRequestBodySize": 1048576,
    "MaxQueryStringLength": 2048,
    "MaxUrlLength": 4096,
    "EnableSqlInjectionProtection": true,
    "EnableXssProtection": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting": "Information",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "DriftRide": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/driftride-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "shared": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {CorrelationId} {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "DriftRide.Api"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information"
    }
  },
  "AllowedHosts": "*"
}
